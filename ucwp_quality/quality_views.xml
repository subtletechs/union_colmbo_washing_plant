<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- view used for quality check -->
    <record id="quality_check_view_form_inherit_union_colombo" model="ir.ui.view">
        <field name="name">quality.check.view.form.inherit</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='measure_on']" position="after">
                <field name="buyer"/>
                <field name="style_no"/>
                <field name="fabric_type"/>
                <field name="wash_type"/>
                <field name="color_id" invisible="1"/>
                <field name="color"/>
                <field name="quality_of"/>
                <field name="second_wash"/>
            </xpath>
            <!--            Inspection Quantity tab-->
            <xpath expr="//page[@name='notes']" position="before">
                <page string="Inspection Quantity" name="inspection_quantity">
                    <field name="inspection_quantity">
                        <tree string="Inspection Quantity" editable="bottom">
                            <field name="quantity"/>
                            <field name="pass_Quantity"/>
                            <field name="fail_Quantity"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>