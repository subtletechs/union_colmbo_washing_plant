<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- sale order tree view -->
    <record id="sale_order_tree_view_inherit_union_colombo" model="ir.ui.view">
        <field name="name">sale.order.tree.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="garment_type"/>
            </xpath>
        </field>
    </record>

    <!-- sale order form view -->
    <record id="sale_order_form_view_inherit_union_colombo" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="garment_type"/>
            </xpath>
            <xpath expr="//group[@name='order_details']" position="after">
                <group string="Pre Costing">
                    <field name="pre_costing" widget="many2many_tags"/>
                    <field name="need_to_approve" invisible="1"/>
                    <field name="is_approved" invisible="1"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='require_payment']" position="after">
                    <field name="po_availability"/>
            </xpath>
            <xpath expr="//field[@name='client_order_ref']" position="attributes">
                    <attribute name="attrs">{
                        'required': [('po_availability', 'in', ['po', 'temp_po'])]}</attribute>
            </xpath>


            <!-- Sale order lines -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="garment_select"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="buyer"/>
                <field name="fabric_type"/>
                <field name="wash_type"/>
                <field name="garment_type"/>
            </xpath>
        </field>
    </record>

</odoo>