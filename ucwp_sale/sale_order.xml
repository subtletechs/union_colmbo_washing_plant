    <!-- sale order form view -->
    <record id="sale_order_form_view_inherit_union_colombo" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='payment_action_void']" position="before">
                <button name="generate_garment_receipt" type="object" class="btn-primary"
                        string="Garment Receipt"
                        attrs="{'invisible': [('garment_sales', '=', False)]}"
                />
            </xpath>

            <!-- Garment Receipt State Button -->
            <xpath expr="//button[@name='preview_sale_order']" position="before">
                <button name="preview_garment_receipt"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-plane icon"
                        attrs="{'invisible': ['|', ('garment_receipt_count', '=', 0), ('garment_sales', '=', False)]}">
                    <field name="garment_receipt_count" widget="statinfo" string="Garment Receipts"/>
                </button>
            </xpath>

            <!-- [UC-47] -->
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="garment_sales"/>
            </xpath>

            <xpath expr="//group[@name='order_details']" position="after">
                <group string="Pre Costing" attrs="{'invisible': [('garment_sales', '=', False)]}">
                    <field name="pre_costing" widget="many2many_tags"/>
                    <field name="need_to_approve" invisible="1"/>
                    <field name="is_approved" invisible="1"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='require_payment']" position="after">
                <field name="po_availability"/>
            </xpath>
            <xpath expr="//field[@name='client_order_ref']" position="attributes">
                <attribute name="attrs">{
                    'required': [('po_availability', 'in', ['po', 'temp_po'])]}
                </attribute>
            </xpath>


            <!-- Actually Received Product Quantity Tab -->
            <xpath expr="//page[@name='order_lines']" position="after">
                <page string="Actually Received Product Quantity" name="actually_received_product_qty" invisible="1">
                    <field name="actually_received_product_qty">
                        <tree string="Actually Received Product Quantity" editable="bottom">
                            <field name="product_id"/>
                            <field name="actually_received"/>
                        </tree>
                    </field>
                </page>
            </xpath>


            <!-- Sale order lines -->
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="garment_select" attrs="{'column_invisible': [('parent.garment_sales', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="buyer" attrs="{'column_invisible': [('parent.garment_sales', '=', False)]}"/>
                <field name="fabric_type" attrs="{'column_invisible': [('parent.garment_sales', '=', False)]}"/>
                <field name="wash_type" attrs="{'column_invisible': [('parent.garment_sales', '=', False)]}"/>
                <field name="garment_type" attrs="{'column_invisible': [('parent.garment_sales', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>