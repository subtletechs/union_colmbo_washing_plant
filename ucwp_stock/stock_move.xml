<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--     stock move-->
    <record id="view_stock_move_nosuggest_operations_inherit_union_colombo" model="ir.ui.view">
        <field name="name">stock.move.operations.nosuggest.form.view.inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_nosuggest_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_nosuggest_ids']" position="after">
                <field name="done_qty" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- stock move lines -->
    <record id="view_stock_move_line_operation_tree_inherit_union_colombo" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.inherit.union.colombo</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_name']" position="after">
                <field name="barcode"/>
                <button name="print_barcode" type="object"
                        class="oe_stat_button"
                        icon="fa-barcode"
                        help="Print Barcode"
                />
                <field name="garment_select" invisible="1"/>
                <field name="washing_options" attrs="{'invisible': [('garment_select', '=', 'bulk')]}"/>
            </xpath>
            <xpath expr="//field[@name='lot_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>

    </record>

    <!-- stock picking form view -->
    <record id="view_picking_form_view_inherit_union_colombo" model="ir.ui.view">
        <!--        view_picking_form-->
        <field name="name">stock.picking.form.view.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="receive_logistic_update_datetime" string="Update Log Time" type="object"
                        class="oe_highlight" groups="base.group_user"
                        attrs="{'invisible': ['|',('garment_receipt', '=', False),('receive_logistic','!=', False)]}"/>
                <button name="receive_sample_update_datetime" string="Update Sample Room Time" type="object"
                        class="oe_highlight" groups="base.group_user"
                        attrs="{'invisible': ['|',('garment_receipt', '=', False),('receive_sample_room','!=', False)]}"/>
                <button name="before_quality_check" string="Before-wash QC" type="object" class="oe_highlight"
                        groups="base.group_user"
                        attrs="{'invisible': ['|','|',('garment_receipt', '=', False),('state','!=', 'done'),('quality_check_count', '&gt;', 0)]}"/>
                <!-- [UC-07] -->
                <button name="generate_mo" string="Generate MO" type="object"
                        class="oe_highlight" groups="base.group_user"
                        attrs="{'invisible': ['|','|','|',('garment_receipt', '=', False),('state','!=','done'),('bulk_production_count','=',1),('garment_select', '=', 'sample')]}"/>
                <button name="create_invoice" string="Create Invoice" type="object"
                        class="oe_highlight" groups="base.group_user"
                        attrs="{'invisible': ['|',('picking_type_code', '!=', 'outgoing'),('state','!=','done')]}"/>
                <field name="sale_id" invisible="1"/>
            </xpath>

            <!-- [UC-11] -->
            <xpath expr="//sheet/div[1]/button[@name='action_picking_move_tree']" position="before">
                <button name="action_view_quality_count"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': ['|',('quality_check_count', '=', 0),('garment_receipt', '=', False)]}">
                    <field name="quality_check_count" widget="statinfo" string="Quality Check"/>
                </button>
                <!-- [UC-07] -->
                <button name="action_view_bulk_production_count"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-gears"
                        attrs="{'invisible': ['|',('garment_receipt', '=', False),('bulk_production_count', '=', 0)]}">
                    <field name="bulk_production_count" widget="statinfo" string="Parent Manufacturing Orders"/>
                </button>
                <!-- [UC-17] -->
                <button name="action_view_invoice_count"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o"
                        attrs="{'invisible': [('invoice_count', '=', 0)]}">
                    <field name="invoice_count" widget="statinfo" string="Invoices"/>
                </button>
            </xpath>

            <xpath expr="//field[@name='use_create_lots']" position="after">
                <field name="garment_receipt" invisible="1"/>
                <field name="is_receipt_return" invisible="1"/>
            </xpath>
            <xpath expr="//sheet/group[1]" position="after">
                <group>
                    <group attrs="{'invisible': [('garment_receipt', '=', False)]}">
                        <field name="po_availability"/>
                        <field name="customer_ref" attrs="{'required': [('po_availability', 'in', ['po', 'temp_po'])]}"/>
                    </group>
                </group>
                <group>
                    <group string="Garment Info" attrs="{'invisible': [('garment_receipt', '=', False)]}">
                        <field name="garment_select"/>
                        <field name="samples"
                               attrs="{'invisible': ['|',('garment_select', '=', 'sample'),('garment_select', '=', False)]}"/>
                        <field name="receive_logistic"/>
                        <field name="receive_sample_room"/>
                    </group>
                    <group>
                        <field name="receipts" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                        <field name="manufacture_order"
                               attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    </group>
                </group>
            </xpath>

            <xpath expr="//field[@name='description_picking']" position="after">
                <field name="op_name" invisible="1"/>
                <field name="invoice_type" attrs="{'column_invisible': [('parent.garment_receipt', '=', False)]}"/>
                <field name="wash_type" attrs="{'column_invisible': [('parent.garment_receipt', '=', False)]}"/>
                <field name="approval" attrs="{'column_invisible': [('parent.garment_receipt', '=', False)]}"/>
                <field name="comment" attrs="{'column_invisible': [('parent.garment_receipt', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <!-- Stock Picking internal search-->
    <record id="view_picking_internal_search_inherit_union_colombo" model="ir.ui.view">
        <field name="name">stock.picking.internal.search.inherit.union.colombo</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <!-- group by -->
            <xpath expr="//filter[@name='picking_type']" position="after">
                <separator/>
                <filter string="Contact" name="group_by_customer" domain="[]" context="{'group_by': 'partner_id'}"/>
                <filter string="Created date" name="group_by_create_date" domain="[]"
                        context="{'group_by': 'create_date'}"/>
                <filter string="Variant" name="group_by_variant" domain="[]" context="{'group_by': 'variant_id'}"/>
            </xpath>
        </field>
    </record>

    <!-- view used for stock.production.lot  -->
    <record id="view_production_lot_form_inherit_union_colombo" model="ir.ui.view">
        <field name="name">stock.production.lot.form.view.inherit</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <!-- Barcode field -->
            <xpath expr="//group[@name='main_group']/group[1]/field[@name='company_id']" position="after">
                <field name="barcode"/>
                <field name="product_type"/>
            </xpath>
        </field>
    </record>

</odoo>