<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Location for Logistic -->
        <record id="stock_location_logistic" model="stock.location">
            <field name="name">Logistic</field>
            <field name="usage">internal</field>
            <field name="posz">1</field>
            <field name="locations_category">logistic</field>
        </record>

        <!-- Location for Sample Room -->
        <record id="stock_location_sample" model="stock.location">
            <field name="name">Sample Room</field>
            <field name="usage">internal</field>
            <field name="posz">1</field>
            <field name="locations_category">sample</field>
        </record>

        <!-- Location for Main stores -->
        <record id="stock_location_main_stores" model="stock.location">
            <field name="name">Main Stores</field>
            <field name="usage">internal</field>
            <field name="posz">1</field>
            <field name="location_id" model="stock.location"
                eval="obj().env.ref('stock.warehouse0').lot_stock_id.id"/>
        </record>

        <!-- Location for sub stores -->
        <record id="stock_location_sub_stores" model="stock.location">
            <field name="name">Sub Stores</field>
            <field name="usage">internal</field>
            <field name="posz">1</field>
            <field name="location_id" model="stock.location"
                eval="obj().env.ref('stock.warehouse0').lot_stock_id.id"/>
        </record>

    </data>
</odoo>