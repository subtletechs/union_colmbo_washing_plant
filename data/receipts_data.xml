<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sequence for garment receipts -->
        <record id="garment_receipt_inventory_operation" model="ir.sequence">
            <field name="name">Garment Receipt Sequence</field>
            <field name="code"></field>
            <field name="implementation">standard</field>
            <field name="prefix">WH/G/IN</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next_actual">1</field>
        </record>

        <!-- Inventory Operation for Garment Receipts-->
        <record id="stocking_picking_type_garment_receipt" model="stock.picking.type">
            <field name="name">Garment Receipts</field>
            <field name="code">incoming</field>
            <field name="sequence_id" ref="union_colmbo_washing_plant.garment_receipt_inventory_operation"/>
            <field name="sequence_code">IN</field>
            <field name="show_operations">0</field>
            <field name="show_reserved">0</field>
            <field name="use_create_lots">1</field>
            <field name="use_existing_lots">0</field>
            <field name="garment_receipt">1</field>
        </record>

    </data>
</odoo>