<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Quality check report -->
    <template id="quality_check_report_template">
        <t t-call="web.html_container">
            <div class="page">
                <center>
                    <h1>Quality Check Report</h1>
                </center>
            </div>
            <br/>
            <br/>
        </t>
    </template>

    <!--    action for Quality check report-->
    <record id="quality_check_report_action" model="ir.actions.report">
        <field name="name">Quality Check Report</field>
        <field name="model">ucwp.quality.check</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">union_colmbo_washing_plant.quality_check_report_template</field>
        <field name="report_file">union_colmbo_washing_plant.quality_check_report_template</field>
        <field name="binding_model_id" ref="model_ucwp_quality_check"/>
        <field name="binding_type">report</field>
    </record>
</odoo>